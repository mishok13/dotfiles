[init]
	templatedir = /Users/andriimishkovskyi/work/.gittemplate

[url "kpn-github:"]
	insteadOf = git@github.com:

[url "kpn-gitlab:"]
	insteadOf = git@gitlab.com:

[commit]
	gpgsign = true

[gpg]
	format = ssh

[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[include]
	path = ~/.config/git/sensitive.work
